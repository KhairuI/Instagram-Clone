<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SelectRegister">

    <RelativeLayout
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selectText"
            android:layout_marginBottom="25sp"
            android:src="@drawable/instagram_text"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="100dp">

        </ImageView>

        <Button
            android:text="Sign up with Email and Password"
            android:layout_below="@id/selectText"
            android:id="@+id/selectEmailId"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </Button>

        <TextView
            android:text="OR"
            android:layout_below="@id/selectEmailId"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/selectOR"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:text="Sign up with Google"
            android:id="@+id/selectGoogleId"
            android:textAllCaps="false"
            android:layout_below="@id/selectOR"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <include layout="@layout/select_register_toolbar"/>
    </RelativeLayout>

</RelativeLayout>