<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SetNameActivity">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Add Your Name"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:text="@string/name_text"
            android:id="@+id/nameDetails"
            android:layout_marginTop="8dp"
            android:layout_below="@id/name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:text="@string/unique_text"
            android:textColor="#F41F30"
            android:id="@+id/unique"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/nameDetails"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/unique"
            android:id="@+id/nameEdit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:endIconMode="clear_text"
            android:layout_marginBottom="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullNameEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button

            android:text="Next"
            android:layout_below="@id/nameEdit"
            android:layout_centerHorizontal="true"
            android:id="@+id/setNameButtonId"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="330dp"
            android:layout_height="60dp">
        </Button>

        <TextView
            android:text="@string/userName_text"
            android:id="@+id/user"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:justificationMode="inter_word"
            android:textColor="#058BC8"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/setNameButtonId"
            android:layout_width="330dp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:text="Uzzal"
            android:id="@+id/finalUserNameId"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_below="@id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:layout_below="@id/finalUserNameId"
            android:textAllCaps="false"
            android:id="@+id/finalNameSubmitButtonId"
            android:backgroundTint="@color/dark_blue"
            android:layout_width="330dp"
            android:text="Continue"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp">

        </Button>




        <ProgressBar
            android:id="@+id/setNameProgressId"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ProgressBar>



    </RelativeLayout>

</RelativeLayout>